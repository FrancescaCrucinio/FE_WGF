\begin_inset Formula 
\begin{equation}
\lim_{N\rightarrow\infty}\sup_{i\leq N}\Exp\left[\sup_{t\leq T}\vert X_{t}^{i,N}-X_{t}^{i}\vert^{2}\right]=0,\label{eq:chaos}
\end{equation}

\end_inset

